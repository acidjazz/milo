
.container
  width 100%
  > .header
    width 100%
    > .truck
      display none
    > .logo
      width 90%
      height 14em
      float none
      margin -2em auto 1em auto
      background-image url('../img/logo_mobile.png')
  > .wood
    > .intro
      > .lists
        text-align left
        > ul.list
          padding 0 0 0 2em
          margin 0
    > .schedule
      > .map
        float none
        width 100%
        height 20em
      > .events
        float none
        width 100%
        padding 0

    > .rsvp2
      width 90%
      > .left
        font-size 0.8em
        width 50%
        margin 0
      > .right
        font-size 1em

  > .recipes
    &.on
      height auto

  > .story
    width 100%
    &.on
      height auto
    > .topbar
      display none
    > .title
      font-size 1.5em
    > .copy
      font-size 1em
      width 90%
      padding 1em
    > .dog
      display none


